- import nu.u8.estoril._
- import java.time._
- import Git.ObjectIdOps
-@ val title: String
-@ val contents: Seq[Content]
-@ val lang: String
-@ val updatedAt: ZonedDateTime
-@ val createdAt: ZonedDateTime
-@ val root: String
-@ val urn: String
-@ val path: String

!!! XML
feed(xmlns='http://www.w3.org/2005/Atom')
  title(type='text') Sine Lite Dies
  //subtitle(type='text')
  updated #{updatedAt}
  //published #{createdAt}
  id #{urn}
  link(rel='alternate' type='text/html' hreflang='ja' href='#{root}/article/all.xhtml')
  link(rel='self' type='application/atom+xml' href='http://sld.sumito3478.info/#{root}/#{path}')
  rights Copyright (c) 2014 sumito3478
  generator(uri='https://github.com/sumito3478/sine-lite-dies' version='0.0.1-SNAPSHOT') Sine Lite Dies
  - for (Content(body, metaData, tags, title, permalink, updatedAt, createdAt, urn) <- contents)
    entry
      title #{title}
      link(rel='alternate' type='text/html' href='#{root}/#{permalink}')
      id #{urn}
      updated #{updatedAt}
      published #{createdAt}
      author
        name sumito3478
        uri https://sld.sumito3478.info/
      content(type='xhtml' xml:lang='ja')
        div(xmlns='http://www.w3.org/1999/xhtml')
          :!pandoc-markdown
            #{body}


